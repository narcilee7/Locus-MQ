{
  "name": "locus-mq",
  "version": "1.0.0",
  "description": "A production-grade message queue based on SQLite and Node.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && npm run build:clean",
    "build:clean": "rm -rf dist && tsc",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    "cli": "tsx src/cli/index.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint && npm run type-check && npm run build"
  },
  "keywords": [
    "message-queue",
    "sqlite",
    "nodejs",
    "distributed",
    "queue"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^11.1.2",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^22.1.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.57.0",
    "vitest": "^2.0.5",
    "@vitest/coverage-v8": "^2.0.5",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "prettier": "^3.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}